def bucket = 'mborch-lambda-deployment-demo'
def functionName = 'DeploymentTest'
def testAlias = 'test'
def region = 'ap-southeast-1'

node('master'){
    stage('Checkout'){
        checkout scm
    }

    stage('Publish'){
        LATEST_VERSION = sh (
          script = "aws lambda publish-version \
                    --function-name ${functionName} \
                    --query 'Version'"
          returnStdout: true
        ).trim()
    }

    stage('Deploy'){
        sh "aws lambda update-alias \
            --name ${testAlias} \
            --function-name ${functionName} \
            --routing-config AdditionalVersionWeights={${LATEST_VERSION}=0.05}"
        sleep 2 minutes
        sh "aws lambda update-alias \
            --name ${testAlias} \
            --function-name ${functionName} \
            --routing-config AdditionalVersionWeights={${LATEST_VERSION}=1}"

    }
}

def commitID() {
    sh 'git rev-parse HEAD > .git/commitID'
    def commitID = readFile('.git/commitID').trim()
    sh 'rm .git/commitID'
    commitID
}
